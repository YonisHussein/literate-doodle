<div class="login-page">
  <div class="container">
    <h2>Login</h2>
        <form class="form login-form">
          <div class="form-group">
            <label for="username-login">Username:</label>
            <input class="form-input" type="text" id="username-login" />
          </div>
          <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-input" type="password" id="password-login" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">login</button>
          </div>
        </form>

    <h2>Sign Up</h2>
        <form class="form signup-form">
          <div class="form-group">
            <label for="username-signup">Username:</label>
            <input class="form-input" type="text" id="username-signup" />
          </div>
          <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-input" type="password" id="password-signup" />
          </div>

          <div class="form-group">
            <legend>Roles:</legend>
            <label for="role-signup">ADC</label>
            <input class="form-input" type="checkbox" id="adcRole-signup" />
            <label for="role-signup">Support</label>
            <input class="form-input" type="checkbox" id="supportRole-signup" />
            <label for="role-signup">Mid</label>
            <input class="form-input" type="checkbox" id="midRole-signup" />
            <label for="role-signup">Jungle</label>
            <input class="form-input" type="checkbox" id="jungleRole-signup" />
            <label for="role-signup">Top</label>
            <input class="form-input" type="checkbox" id="topRole-signup" />
          </div>

          <div class="form-group">
            <legend>Rank: </legend>
            <input class="form-input" name ="rank"  type="radio" id="iron-signup" />
            <label for="rankFlex-signup">Iron</label>
            <input class="form-input" name ="rank" type="radio" id="bronze-signup" />
            <label for="rankFlex-signup">Bronze</label>
            <input class="form-input" name ="rank" type="radio" id="silver-signup" />
            <label for="rankFlex-signup">Silver</label>
            <input class="form-input" name ="rank" type="radio" id="gold-signup" />
            <label for="rankFlex-signup">Gold</label>
            <input class="form-input" name ="rank" type="radio" id="platinum-signup" />
            <label for="rankFlex-signup">Platinum</label>
            <input class="form-input" name ="rank" type="radio" id="diamond-signup" />
            <label for="rankFlex-signup">Diamond+</label>
          </div>

          <div class="form-group">
            <legend>Flex Rank: </legend>
            <input class="form-input" name ="rankFlex" type="radio" id="ironFlex-signup" />
            <label for="rank-signup">Iron</label>
            <input class="form-input" name ="rankFlex" type="radio" id="bronzeFlex-signup" />
            <label for="rank-signup">Bronze</label>
            <input class="form-input" name ="rankFlex" type="radio" id="silverFlex-signup" />
            <label for="rank-signup">Silver</label>
            <input class="form-input" name ="rankFlex" type="radio" id="goldFlex-signup" />
            <label for="rank-signup">Gold</label>
            <input class="form-input" name ="rankFlex" type="radio" id="platinumFlex-signup" />
            <label for="rank-signup">Platinum</label>
            <input class="form-input" name ="rankFlex" type="radio" id="diamondFlex-signup" />
            <label for="rank-signup">Diamond+</label>
          </div>

          <div class="form-group">
            <label for="gameName-signup">Summoner Name:</label>
            <input class="form-input" type="text" id="gameName-signup" />
          </div>

          <div class="form-group">
            <button class="btn btn-primary" type="submit">Signup</button>
          </div>
        </form>
  </div>
</div>
    
<script src="/js/login.js"></script>